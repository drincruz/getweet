root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[**.{ex,exs}]
indent_style = space
indent_size = 2
max_line_length = 90

[*.go]
indent_style = tab
indent_size = 8

[*.py]
indent_style = space
indent_size = 4

[*.rs]
indent_size = 4
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true
